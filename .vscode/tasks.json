{
    "version": "0.1.0",
    "command": "mingw32-make",
    //"args": ["-g","-Wwrite-strings", "${file}","-o","${file}.exe"],    // 编译命令参数
    "args": [ "-f", "${workspaceRoot}/src/Makefile", "all", "-j4"], 
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}/src"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}